/*
scheme:
#ef9be6
#9be6ef
#e6ef9b
#9befa4
*/

body {
	background-color: #ef9be6;
	color: #000;
    background-image: url(<%= image_path('cupcakes/stylized/background.png') %>);
    background-repeat: repeat;
    margin: 0px;
}

.frost-underline {
    min-height: 47px;
    background-repeat: repeat;
}

section {
	padding: 10px;
}

.frost-underline:nth-of-type(3n+1) {
    background-image: url(<%= image_path('cupcakes/stylized/frost1.png') %>);
}

article section:nth-of-type(3n+2) {
    background-color: #ef9be6;
}

.frost-underline:nth-of-type(3n+2) {
    background-image: url(<%= image_path('cupcakes/stylized/frost2.png') %>);
}

.frost-underline:nth-of-type(3n+1) {
    background-color: #9be6ef;
}

.frost-underline:nth-of-type(3n+3) {
    background-image: url(<%= image_path('cupcakes/stylized/frost3.png') %>);
}

article section:nth-of-type(3n+3) {
    background-color: #9be6ef;
}

.frost-underline:nth-of-type(3n+2) {
    background-color: #e6ef9b;
}

article section:nth-of-type(3n+4) {
    background-color: #e6ef9b;
}

#intro .textbox {
    max-width: 400px;
    float: left;
}

#intro img {
	margin-top: 50px;
	margin-right: 20px;
	float: right;
}

#intro {
	margin: 10px;
}
